# ===========================================
# CONTEST PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update values

# ------------------
# PostgreSQL Database
# ------------------
POSTGRES_USER=contest
POSTGRES_PASSWORD=contest123
POSTGRES_DB=contest_db
POSTGRES_PORT=5433

# Database connection URL (used by Prisma and backend)
DATABASE_URL=postgresql://contest:contest123@localhost:5432/contest_db

# ------------------
# Redis Cache
# ------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ------------------
# JWT Authentication
# ------------------
# IMPORTANT: Change this in production to a strong random string
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ------------------
# Backend Server
# ------------------
PORT=3000
NODE_ENV=development
BACKEND_PORT=3001

# ------------------
# Frontend (Vite)
# ------------------
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
FRONTEND_PORT=80

# ------------------
# Docker Compose Ports
# ------------------
# These ports map container ports to host ports
# Format: HOST_PORT:CONTAINER_PORT
# You can change host ports if there are conflicts
